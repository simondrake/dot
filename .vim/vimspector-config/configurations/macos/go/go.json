{
  "configurations": {
    "test-current-file": {
      "adapter": "vscode-go",
      "configuration": {
        "request": "launch",
        "mode": "test",
        "program": "${fileDirname}",
        "cwd": "${fileDirname}",
        "dlvToolPath": "$GOPATH/bin/dlv",
        "dlvLoadConfig": {
          "maxArrayValues": 1000,
          "maxStringLen": 1000
        },
        "args": [],
        "buildFlags": "-tags=integration"
      }
    },
    "test-current-test": {
      "adapter": "vscode-go",
      "variables": {
        "TestName": {
          "shell": ["testname", "${file}:${lineNumber}"]
        }
      },
      "configuration": {
        "request": "launch",
        "program": "${fileDirname}",
        "mode": "test",
        "dlvToolPath": "$GOPATH/bin/dlv",
        "trace": true,
        "args": ["-test.run", "${TestName}"]
      }
    }
  }
}
